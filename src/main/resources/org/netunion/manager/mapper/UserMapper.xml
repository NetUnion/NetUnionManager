<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.netunion.manager.mapper.UserMapper">
    <resultMap id="UserResult" type="User">
        <result property="userName" column="username" />
        <result property="hashedPasswd" column="hashed_password" />
        <result property="id" column="id" />
    </resultMap>
    <!--    增-->
    <insert id="add" parameterType="User">
        INSERT INTO "user" ("username", "hashed_password") VALUES(#{userName}, #{hashedPasswd})
    </insert>
    <!--    删-->
    <delete id="delete" parameterType="User">
        DELETE FROM "user" WHERE id = #{id}
    </delete>
    <!--    改-->
    <update id="updatePasswdById" parameterType="User">
        UPDATE "user" SET hashed_password = #{newPassWord} WHERE id = #{id}
    </update>
    <!--    查-->
    <select id="getById" resultMap="UserResult" parameterType="User">
        SELECT * FROM "user" WHERE id = #{id}
    </select>
    <select id="getByUserName" resultMap="UserResult" parameterType="User">
        SELECT * FROM "user" WHERE username = #{userName}
    </select>
    <select id="getAll" resultMap="UserResult">
        SELECT * FROM "user"
    </select>
</mapper>